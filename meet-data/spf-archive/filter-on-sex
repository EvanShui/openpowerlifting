#!/usr/bin/env python3
#
# Rewrites lifters.csv so that it only contains rows with Sex data.

import sys
sys.path.append('scripts')
sys.path.append('../../scripts')
sys.path.append('../../../scripts')

import oplcsv

csv = oplcsv.Csv(sys.argv[1])
sexidx = csv.index('Sex')

rows2 = []
for row in csv.rows:
    if row[sexidx]:
        rows2.append(row)

csv.rows = rows2
with open(sys.argv[1],'w') as fd:
    csv.write(fd)
